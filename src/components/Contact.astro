<script type="module">
import emailjs from '@emailjs/browser';
import { emailConfig, sendEmailFallback } from '../utils/emailConfig.js';

// Solo inicializar EmailJS si está configurado
if (emailConfig.isConfigured()) {
  emailjs.init(emailConfig.USER_ID);
}

const form = document.getElementById('contact-form');
const submitBtn = document.getElementById('submit-btn');
const btnText = document.getElementById('btn-text');
const btnLoading = document.getElementById('btn-loading');
const btnIcon = document.getElementById('btn-icon');
const btnSpinner = document.getElementById('btn-spinner');
const formMessages = document.getElementById('form-messages');
const successMessage = document.getElementById('success-message');
const errorMessage = document.getElementById('error-message');
const errorText = document.getElementById('error-text');

form.addEventListener('submit', async (e) => {
  e.preventDefault();
  
  // Validar campos requeridos
  const requiredFields = ['nombre', 'email', 'empresa'];
  let isValid = true;
  
  requiredFields.forEach(fieldName => {
    const field = document.getElementById(fieldName);
    if (!field.value.trim()) {
      field.classList.add('border-red-500');
      isValid = false;
    } else {
      field.classList.remove('border-red-500');
    }
  });
  
  // Validar email
  const emailField = document.getElementById('email');
  const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  if (emailField.value && !emailRegex.test(emailField.value)) {
    emailField.classList.add('border-red-500');
    isValid = false;
  }
  
  // Validar checkbox de privacidad
  const privacyCheckbox = document.getElementById('privacy');
  if (!privacyCheckbox.checked) {
    isValid = false;
    privacyCheckbox.parentElement.classList.add('text-red-400');
  } else {
    privacyCheckbox.parentElement.classList.remove('text-red-400');
  }
  
  if (!isValid) {
    showError('Por favor completa todos los campos requeridos correctamente.');
    return;
  }
  
  // Recopilar datos del formulario
  const formData = {
    nombre: document.getElementById('nombre').value.trim(),
    email: document.getElementById('email').value.trim(),
    empresa: document.getElementById('empresa').value.trim(),
    telefono: document.getElementById('telefono').value.trim(),
    empleados: document.getElementById('empleados').value,
    mensaje: document.getElementById('mensaje').value.trim()
  };
  
  // Intentar envío según la configuración disponible
  if (emailConfig.isConfigured()) {
    await sendWithEmailJS(formData);
  } else {
    sendWithMailto(formData);
  }
});

async function sendWithEmailJS(formData) {
  setLoadingState(true);
  hideMessages();
  
  try {
    const templateParams = {
      from_name: formData.nombre,
      from_email: formData.email,
      empresa: formData.empresa,
      telefono: formData.telefono || 'No proporcionado',
      empleados: formData.empleados || 'No especificado',
      message: formData.mensaje || 'Sin mensaje adicional',
      to_email: emailConfig.TO_EMAIL,
      reply_to: formData.email
    };
    
    const response = await emailjs.send(
      emailConfig.SERVICE_ID,
      emailConfig.TEMPLATE_ID,
      templateParams
    );
    
    if (response.status === 200) {
      showSuccess('¡Mensaje enviado exitosamente! Te contactaremos pronto.');
      form.reset();
    } else {
      throw new Error('Error en el envío');
    }
    
  } catch (error) {
    console.error('EmailJS Error:', error);
    // Fallback a mailto
    showError('Enviando por método alternativo...');
    setTimeout(() => sendWithMailto(formData), 1000);
  } finally {
    setLoadingState(false);
  }
}

function sendWithMailto(formData) {
  try {
    const success = sendEmailFallback(formData);
    if (success) {
      showSuccess('Se ha abierto tu cliente de email. Por favor envía el mensaje.');
      form.reset();
    }
  } catch (error) {
    console.error('Mailto Error:', error);
    showError('Por favor contáctanos directamente a emstudios.col@gmail.com o +57 322 802 6060');
  }
}

function setLoadingState(loading) {
  submitBtn.disabled = loading;
  
  if (loading) {
    btnText.classList.add('hidden');
    btnIcon.classList.add('hidden');
    btnLoading.classList.remove('hidden');
    btnSpinner.classList.remove('hidden');
  } else {
    btnText.classList.remove('hidden');
    btnIcon.classList.remove('hidden');
    btnLoading.classList.add('hidden');
    btnSpinner.classList.add('hidden');
  }
}

function showSuccess(message = '¡Mensaje enviado exitosamente! Te contactaremos pronto.') {
  const successText = successMessage.querySelector('div div');
  successText.innerHTML = `
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
    </svg>
    ${message}
  `;
  
  formMessages.classList.remove('hidden');
  successMessage.classList.remove('hidden');
  errorMessage.classList.add('hidden');
  
  // Scroll al mensaje
  formMessages.scrollIntoView({ behavior: 'smooth' });
}

function showError(message) {
  errorText.textContent = message;
  formMessages.classList.remove('hidden');
  errorMessage.classList.remove('hidden');
  successMessage.classList.add('hidden');
  
  // Scroll al mensaje
  formMessages.scrollIntoView({ behavior: 'smooth' });
}

function hideMessages() {
  formMessages.classList.add('hidden');
  successMessage.classList.add('hidden');
  errorMessage.classList.add('hidden');
}

// Información para el desarrollador
if (!emailConfig.isConfigured()) {
  console.warn('⚠️ EmailJS no está configurado. El formulario usará mailto: como fallback.');
  console.info('📧 Para configurar EmailJS:', {
    '1': 'Regístrate en https://emailjs.com',
    '2': 'Configura un servicio de email (Gmail recomendado)',
    '3': 'Crea un template de email',
    '4': 'Actualiza src/utils/emailConfig.js con tus credenciales'
  });
}
