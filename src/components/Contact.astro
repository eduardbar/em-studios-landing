<script>
// Declaraciones de tipos para EmailJS v4
declare global {
  interface Window {
    emailjs: {
      init: (config: { publicKey: string }) => void;
      send: (serviceId: string, templateId: string, templateParams: any) => Promise<{ status: number }>;
    };
  }
}

// Estado de EmailJS
let emailjsReady = false;
let emailjsLoadPromise: Promise<typeof window.emailjs> | null = null;

// Configuración EmailJS integrada
const emailConfig = {
  USER_ID: 'ySw81bbirWizYr8eQ',
  SERVICE_ID: 'service_3s0igrc', 
  TEMPLATE_ID: 'template_5cclczs',
  TO_EMAIL: 'emstudios.col@gmail.com',
  isConfigured: () => true
};

// Función para cargar EmailJS de forma segura
function loadEmailJS(): Promise<typeof window.emailjs> {
  if (emailjsLoadPromise) {
    return emailjsLoadPromise;
  }
  
  emailjsLoadPromise = new Promise((resolve, reject) => {
    // Verificar si EmailJS ya está disponible
    if (typeof window !== 'undefined' && (window as any).emailjs) {
      emailjsReady = true;
      resolve((window as any).emailjs);
      return;
    }
    
    // Cargar el script de EmailJS versión 4
    const script = document.createElement('script');
    script.src = 'https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js';
    script.async = true;
    
    script.onload = () => {
      // Verificar que emailjs esté realmente disponible
      if (typeof window !== 'undefined' && (window as any).emailjs) {
        try {
          // EmailJS v4 usa un objeto en lugar de string
          (window as any).emailjs.init({
            publicKey: emailConfig.USER_ID
          });
          emailjsReady = true;
          console.log('✅ EmailJS v4 cargado exitosamente');
          resolve((window as any).emailjs);
        } catch (error) {
          console.error('❌ Error inicializando EmailJS v4:', error);
          reject(error);
        }
      } else {
        const error = new Error('EmailJS no está disponible después de cargar el script');
        console.error('❌', error.message);
        reject(error);
      }
    };
    
    script.onerror = (error) => {
      console.error('❌ Error cargando EmailJS v4 script:', error);
      reject(error);
    };
    
    // Timeout de seguridad
    setTimeout(() => {
      if (!emailjsReady) {
        reject(new Error('Timeout cargando EmailJS v4'));
      }
    }, 10000);
    
    document.head.appendChild(script);
  });
  
  return emailjsLoadPromise;
}

// Función de fallback
const sendEmailFallback = (data: any) => {
  const subject = encodeURIComponent(`Nueva consulta desde EM STUDIOS - ${data.empresa}`);
  const body = encodeURIComponent(`
Estimado equipo de EM STUDIOS,

Nueva consulta desde la landing page:

INFORMACIÓN DEL CLIENTE:
------------------------
Nombre: ${data.nombre}
Email: ${data.email}
Empresa: ${data.empresa}
Teléfono: ${data.telefono || 'No proporcionado'}
Empleados: ${data.empleados || 'No especificado'}

MENSAJE:
--------
${data.mensaje || 'Sin mensaje adicional'}

FECHA: ${new Date().toLocaleString('es-CO')}

Por favor, contacta al cliente lo antes posible.
  `.trim());
  
  const mailtoLink = `mailto:${emailConfig.TO_EMAIL}?subject=${subject}&body=${body}`;
  window.open(mailtoLink, '_blank');
  return true;
};

// Elementos del DOM con tipos específicos
const form = document.getElementById('contact-form') as HTMLFormElement | null;
const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement | null;
const btnText = document.getElementById('btn-text') as HTMLElement | null;
const btnLoading = document.getElementById('btn-loading') as HTMLElement | null;
const btnIcon = document.getElementById('btn-icon') as HTMLElement | null;
const btnSpinner = document.getElementById('btn-spinner') as HTMLElement | null;
const formMessages = document.getElementById('form-messages') as HTMLElement | null;
const successMessage = document.getElementById('success-message') as HTMLElement | null;
const errorMessage = document.getElementById('error-message') as HTMLElement | null;
const errorText = document.getElementById('error-text') as HTMLElement | null;

// Verificar que los elementos críticos existan
if (!form || !submitBtn) {
  console.error('❌ Elementos críticos del formulario no encontrados');
}

// Manejador del formulario
if (form) {
  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Validar campos requeridos
    const requiredFields = ['nombre', 'email', 'empresa'];
    let isValid = true;
    
    requiredFields.forEach(fieldName => {
      const field = document.getElementById(fieldName) as HTMLInputElement | null;
      if (!field || !field.value.trim()) {
        field?.classList.add('border-red-500');
        isValid = false;
      } else {
        field.classList.remove('border-red-500');
      }
    });
    
    // Validar email
    const emailField = document.getElementById('email') as HTMLInputElement | null;
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (emailField && emailField.value && !emailRegex.test(emailField.value)) {
      emailField.classList.add('border-red-500');
      isValid = false;
    }
    
    // Validar checkbox de privacidad
    const privacyCheckbox = document.getElementById('privacy') as HTMLInputElement | null;
    if (!privacyCheckbox || !privacyCheckbox.checked) {
      isValid = false;
      privacyCheckbox?.parentElement?.classList.add('text-red-400');
    } else {
      privacyCheckbox.parentElement?.classList.remove('text-red-400');
    }
    
    if (!isValid) {
      showError('Por favor completa todos los campos requeridos correctamente.');
      return;
    }
    
    // Recopilar datos del formulario
    const nombreEl = document.getElementById('nombre') as HTMLInputElement | null;
    const emailEl = document.getElementById('email') as HTMLInputElement | null;
    const empresaEl = document.getElementById('empresa') as HTMLInputElement | null;
    const telefonoEl = document.getElementById('telefono') as HTMLInputElement | null;
    const empleadosEl = document.getElementById('empleados') as HTMLSelectElement | null;
    const mensajeEl = document.getElementById('mensaje') as HTMLTextAreaElement | null;
    
    const formData = {
      nombre: nombreEl?.value.trim() || '',
      email: emailEl?.value.trim() || '',
      empresa: empresaEl?.value.trim() || '',
      telefono: telefonoEl?.value.trim() || '',
      empleados: empleadosEl?.value || '',
      mensaje: mensajeEl?.value.trim() || ''
    };
    
    // Intentar envío con EmailJS, fallback a mailto si falla
    await sendWithEmailJS(formData);
  });
}

async function sendWithEmailJS(formData: any) {
  setLoadingState(true);
  hideMessages();
  
  try {
    // Cargar EmailJS de forma segura
    const emailjsLib = await loadEmailJS();
    
    const templateParams = {
      from_name: formData.nombre,
      from_email: formData.email,
      empresa: formData.empresa,
      telefono: formData.telefono || 'No proporcionado',
      empleados: formData.empleados || 'No especificado',
      message: formData.mensaje || 'Sin mensaje adicional',
      to_email: emailConfig.TO_EMAIL,
      reply_to: formData.email,
      fecha: new Date().toLocaleString('es-CO', { 
        timeZone: 'America/Bogota',
        year: 'numeric',
        month: 'long', 
        day: 'numeric',
        hour: '2-digit',
        minute: '2-digit'
      })
    };
    
    console.log('📧 Enviando email con EmailJS v4...');
    const response = await emailjsLib.send(
      emailConfig.SERVICE_ID,
      emailConfig.TEMPLATE_ID,
      templateParams
    );
    
    if (response.status === 200) {
      console.log('✅ Email enviado exitosamente via EmailJS v4');
      showSuccess('¡Mensaje enviado exitosamente! Te contactaremos pronto.');
      if (form && 'reset' in form) {
        (form as HTMLFormElement).reset();
      }
    } else {
      throw new Error(`Error en respuesta: ${response.status}`);
    }
    
  } catch (error) {
    console.error('❌ EmailJS v4 Error:', error);
    console.log('🔄 Utilizando método fallback...');
    
    // Fallback a mailto
    showError('Enviando por método alternativo...');
    setTimeout(() => {
      try {
        const success = sendEmailFallback(formData);
        if (success) {
          showSuccess('Se ha abierto tu cliente de email. Por favor envía el mensaje.');
          if (form && 'reset' in form) {
            (form as HTMLFormElement).reset();
          }
        }
      } catch (fallbackError) {
        console.error('❌ Fallback Error:', fallbackError);
        showError('Por favor contáctanos directamente a emstudios.col@gmail.com o +57 322 802 6060');
      }
    }, 1000);
  } finally {
    setLoadingState(false);
  }
}

function setLoadingState(loading: boolean) {
  if (submitBtn && 'disabled' in submitBtn) {
    (submitBtn as HTMLButtonElement).disabled = loading;
  }
  
  if (loading) {
    btnText?.classList.add('hidden');
    btnIcon?.classList.add('hidden');
    btnLoading?.classList.remove('hidden');
    btnSpinner?.classList.remove('hidden');
  } else {
    btnText?.classList.remove('hidden');
    btnIcon?.classList.remove('hidden');
    btnLoading?.classList.add('hidden');
    btnSpinner?.classList.add('hidden');
  }
}

function showSuccess(message = '¡Mensaje enviado exitosamente! Te contactaremos pronto.') {
  if (!successMessage || !formMessages || !errorMessage) return;
  
  const successText = successMessage.querySelector('div div');
  if (successText) {
    successText.innerHTML = `
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
      ${message}
    `;
  }
  
  formMessages.classList.remove('hidden');
  successMessage.classList.remove('hidden');
  errorMessage.classList.add('hidden');
  
  // Scroll al mensaje
  formMessages.scrollIntoView({ behavior: 'smooth' });
}

function showError(message: string) {
  if (!errorText || !formMessages || !errorMessage || !successMessage) return;
  
  errorText.textContent = message;
  formMessages.classList.remove('hidden');
  errorMessage.classList.remove('hidden');
  successMessage.classList.add('hidden');
  
  // Scroll al mensaje
  formMessages.scrollIntoView({ behavior: 'smooth' });
}

function hideMessages() {
  if (!formMessages || !successMessage || !errorMessage) return;
  
  formMessages.classList.add('hidden');
  successMessage.classList.add('hidden');
  errorMessage.classList.add('hidden');
}

